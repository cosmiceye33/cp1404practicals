
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            size_hint_x: 0.3
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Square'
                # the following line specifies the function in the app class to call when the button is pressed
                on_press: app.handle_calculate(input_number.text)
            Label:
                id: output_label
                font_size: 48
                color: (1, .7, .7)
    Label:
        text: "Enter a number and press square"
